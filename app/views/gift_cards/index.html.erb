<h1>Here are all your gift cards</h1>
<h2><%= link_to "Click here to see all of your sent gift cards", user_sent_gift_cards_path(current_user.id) %></h2>

<% valid_received_cards.reverse.each do |card| %>
    <h2><%= link_to "Card # #{card.id}", user_gift_card_path(current_user.id, card.id)%></h2>
    <h3><%= link_to card.store.name, "http://#{card.store.url}", target: :_blank %></h3>
    <% if card.sender.username %>
        <p><strong>From: </strong><%= card.sender.username %></p>
    <% else %>
        <p><strong>From: </strong><%= card.sender.email %></p>
    <% end %>
    <p><strong>Amount Available: </strong><%= card.dollar_value.to_f %></p>
    <% if card.message %>
        <p><strong>Message: </strong><%= card.message %></p>
    <% end %>
    <p><strong>Checkout Code: </strong><%= card.code %></p>
    <br>
<% end %>
