<% if flash[:alert] %>
    <% flash[:alert].each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<h2>Card # <%=@card.id%></h2>
    <h3><%= link_to @card.store.name, "http://#{@card.store.url}", target: :_blank %></h3>
    <p><strong>From: </strong><%= @card.sender.email %></p>
    <p><strong>Amount Available: </strong>$<%= @card.dollar_value.to_f %></p><br>