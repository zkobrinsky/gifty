<h1>Login</h1>

<% if flash[:alert] %>
    <% flash[:alert].each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_with url:'/login' do %>
   <%= label_tag :username%>
   <%= text_field_tag :username %>
   <%= label_tag :password%>
   <%= password_field_tag :password%>
   <%= submit_tag "Login"%>
<%end%>